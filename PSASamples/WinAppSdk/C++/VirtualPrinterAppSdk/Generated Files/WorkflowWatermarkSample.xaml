<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPrinterAppSdk.WorkflowWatermarkSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPrinterAppSdk"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:VirtualPrinterAppSdk"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel
        Margin="20"
        VerticalAlignment="Center"
        Grid.Column="0"
        HorizontalAlignment="Left"
        Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox x:ConnectionId='15'
                x:Name="WatermarkTextBox"
                Width="200"
                Header="Watermark"
                PlaceholderText="Watermark Text"
                Text=""
                                                           />
                <TextBox x:ConnectionId='16'
                x:Name="TextSizeBox"
                Header="{Binding TextSizeHeader, Mode=OneTime}"
                InputScope="Number"
                Width="80"
                Margin="20,0,0,0"
                PlaceholderText="100"
                Text="100"
                                                     />
            </StackPanel>

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Button x:ConnectionId='14'
                x:Name="PositionWatermarkButton"
                Width="300"
                Margin="0,10,0,0"
                                                     
                Content="Change Watermark Position" />
            </StackPanel>

            <TextBlock x:ConnectionId='6'
            x:Name="PositionWatermarkPrompt"
            Text="{Binding ClickPreviewToPositionWatermarkPrompt, Mode=OneTime}"
            Visibility="Collapsed" />

            <StackPanel Orientation="Horizontal">
                <CheckBox x:ConnectionId='12'
                x:Name="ImageCheckBox"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Content="{Binding ImageCheckBoxLabel, Mode=OneTime}"
                                            />
                <Image x:ConnectionId='13'
                x:Name="LogoImage"
                Width="50"
                Height="50"
                Margin="5,5,5,5"
                Source="Assets/contoso_logo.jpg" />
            </StackPanel>

            <TextBlock x:ConnectionId='7'
            x:Name="InputErrorTextBlock"
            Foreground="Red"
            TextWrapping="Wrap"
            Visibility="Collapsed"
            Text="{Binding InputErrorPrompt, Mode=OneTime}" />

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <ComboBox x:ConnectionId='11'
                x:Name="AccountCodeComboBox"
                Header="Account Code"
                Visibility="Collapsed"
                Width="300"
                Margin="0,10,0,0" />
            </StackPanel>

            <TextBlock x:ConnectionId='8'
            x:Name="XpsGenerationErrorTextBlock"
            Foreground="Red"
            TextWrapping="Wrap"
            Visibility="Collapsed"
            Text="{Binding XpsGenerationErrorPrompt, Mode=OneTime}" />

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Button x:ConnectionId='10'
                x:Name="PrintButton"
                Width="300"
                Margin="0,10,0,0"
                                          
                Content="Print" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Button x:ConnectionId='9'
                x:Name="CancelButton"
                Width="300"
                Margin="0,10,0,0"
                                          
                Content="Cancel" />
            </StackPanel>
        </StackPanel>
        <ScrollViewer x:ConnectionId='2' x:Name="PreviewScrollViewer"
                  Grid.Column="1">
            <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Stretch"
                    Grid.Column="1">
                <control:PreviewPaginationControl x:ConnectionId='3'
                x:Name="PreviewPaginator"
                                                       
                                                    />
                <ProgressRing x:ConnectionId='4'
                x:Name="PreviewLoadingProgressRing" />
                <control:WatermarkPreviewControl x:ConnectionId='5'
                x:Name="WatermarkPreview"
                                                                 />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

