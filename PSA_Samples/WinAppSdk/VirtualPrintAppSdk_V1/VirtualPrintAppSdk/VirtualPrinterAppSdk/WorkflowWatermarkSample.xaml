<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPrinterAppSdk.WorkflowWatermarkSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPrinterAppSdk"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:VirtualPrinterAppSdk"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel
        Margin="20"
        VerticalAlignment="Center"
        Grid.Column="0"
        HorizontalAlignment="Left"
        Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox
                x:Name="WatermarkTextBox"
                Width="200"
                Header="Watermark"
                PlaceholderText="Watermark Text"
                Text=""
                TextChanged="WatermarkTextBox_TextChanged" />
                <TextBox
                x:Name="TextSizeBox"
                Header="{Binding TextSizeHeader, Mode=OneTime}"
                InputScope="Number"
                Width="80"
                Margin="20,0,0,0"
                PlaceholderText="100"
                Text="100"
                TextChanged="TextSizeBox_TextChanged"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Button
                x:Name="PositionWatermarkButton"
                Width="300"
                Margin="0,10,0,0"
                Click="PositionWatermarkButton_Click"
                Content="Change Watermark Position" />
            </StackPanel>

            <TextBlock
            x:Name="PositionWatermarkPrompt"
            Text="{Binding ClickPreviewToPositionWatermarkPrompt, Mode=OneTime}"
            Visibility="Collapsed" />

            <StackPanel Orientation="Horizontal">
                <CheckBox
                x:Name="ImageCheckBox"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Content="{Binding ImageCheckBoxLabel, Mode=OneTime}"
                Click="ImageCheckBox_Click" />
                <Image
                x:Name="LogoImage"
                Width="50"
                Height="50"
                Margin="5,5,5,5"
                Source="Assets/contoso_logo.jpg" />
            </StackPanel>

            <TextBlock
            x:Name="InputErrorTextBlock"
            Foreground="Red"
            TextWrapping="Wrap"
            Visibility="Collapsed"
            Text="{Binding InputErrorPrompt, Mode=OneTime}" />

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <ComboBox
                x:Name="AccountCodeComboBox"
                Header="Account Code"
                Visibility="Collapsed"
                Width="300"
                Margin="0,10,0,0" />
            </StackPanel>

            <TextBlock
            x:Name="XpsGenerationErrorTextBlock"
            Foreground="Red"
            TextWrapping="Wrap"
            Visibility="Collapsed"
            Text="{Binding XpsGenerationErrorPrompt, Mode=OneTime}" />

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Button
                x:Name="PrintButton"
                Width="300"
                Margin="0,10,0,0"
                Click="OnPrintButtonClick"
                Content="Print" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Button
                x:Name="CancelButton"
                Width="300"
                Margin="0,10,0,0"
                Click="CancelButton_Click"
                Content="Cancel" />
            </StackPanel>
        </StackPanel>
        <ScrollViewer x:Name="PreviewScrollViewer"
                  Grid.Column="1">
            <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Stretch"
                    Grid.Column="1">
                <control:PreviewPaginationControl
                x:Name="PreviewPaginator"
                PrevButtonClicked="PreviousPageCommand"
                NextButtonClicked="NextPageCommand" />
                <ProgressRing
                x:Name="PreviewLoadingProgressRing" />
                <control:WatermarkPreviewControl
                x:Name="WatermarkPreview"
                WatermarkPreviewTapped="WatermarkPreview_Tapped" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
